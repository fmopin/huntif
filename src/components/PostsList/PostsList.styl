@import '~css/variables'

// Style de mon composant PostsList :

.posts-list-stats, .posts-list-filters
  display flex
  align-items center
  justify-content center
  margin-top 60px
  margin-bottom 40px

  &__li
    text-align center
    margin-left 10px
    margin-right 10px

    &--nbr
      color $orange-flame-pea
      font-weight 700
      font-size 1.5em
      padding-bottom 10px

.posts-list
  display flex
  flex-flow row wrap
  align-items stretch

  &__loader
    width 100%
    position absolute
    left 0
    background-color $bg-cat
    text-align center

    img
      width 50%
