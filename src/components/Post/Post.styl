@import '~css/variables'

.wrapper-post
  display flex
  margin 30px

.post-banner
  position absolute
  left 0
  width 100%
  height 120px
  object-fit cover
  box-shadow 0 0 1px 0 $gray-gray


.post-votes
  flex 0 0 250px
  margin-top 150px
  background-color $white
  padding 10px
  box-shadow 0 1px 4px 0px $gray-gray
  border-radius 3px
  height 65vh

  &__button
    display block
    background-color $orange-flame-pea
    color $white
    padding 5px
    padding-top 8px
    font-size .8em
    text-align center
    width 100px
    border-radius 3px 3px 3px 3px
    box-shadow none
    height 30px
    margin 0 auto
    margin-top 8px
    cursor pointer

  &__chart
    height 50vh
    margin-top 20px

.post-comments
  display flex
  flex-flow row wrap
  align-items stretch

.post-list-comment
  display flex
  flex-flow row wrap
  // align-items center
  width 70%
  margin auto

  &__li
    width 100%
    background-color $white
    box-shadow 0 1px 1px 0 $gray-gray
    margin-top 20px
    padding 20px 40px 40px 20px

.post-main
  flex 1 1 0
  margin-top 150px
  background-color $white
  padding 10px
  box-shadow 0 1px 4px 0px $gray-gray
  border-radius 3px
  margin-right 30px

.post-main-desc
  display block
  text-align center

  &__img
    width 80px
    height 80px
    border-radius 50%

  &__h2
    color $orange-flame-pea
    padding-top 20px
    padding-bottom 10px
    font-weight 700
    font-size 1.2em
    margin-bottom 8px

  &__p
    color $gray-gray
    padding-bottom 20px
    padding-top 4px
    font-size .75em
